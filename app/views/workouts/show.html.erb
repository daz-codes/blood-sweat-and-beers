<% content_for :title, @workout.name.presence || "Workout" %>

<div class="max-w-2xl mx-auto">

  <div class="mb-6 flex items-center justify-between">
    <% back_path = (@workout.status == "preview" && @workout.user == Current.user) ? new_workout_path : root_path %>
    <% back_label = (@workout.status == "preview" && @workout.user == Current.user) ? "&larr; Generate".html_safe : "&larr; Feed".html_safe %>
    <%= link_to back_label, back_path, class: "text-gray-500 hover:text-gray-300 text-sm" %>
    <%= render "workouts/like_button",
               workout: @workout,
               liked: @liked,
               like_count: @like_count %>
  </div>

  <%= turbo_frame_tag "workout_preview" do %>
    <%= render "workouts/preview", workout: @workout %>
  <% end %>

</div>
