<% content_for :title, @workout.name.presence || "Workout" %>

<div class="max-w-2xl mx-auto">

  <div class="mb-6 flex items-center justify-between">
    <%= link_to "&larr; Feed".html_safe, root_path, class: "text-gray-500 hover:text-gray-300 text-sm" %>
    <%= render "workouts/like_button",
               workout: @workout,
               liked: @liked,
               like_count: @like_count %>
  </div>

  <%= turbo_frame_tag "workout_preview" do %>
    <%= render "workouts/preview", workout: @workout %>
  <% end %>

</div>
