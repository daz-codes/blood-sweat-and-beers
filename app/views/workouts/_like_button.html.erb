<%# locals: (workout:, liked:, like_count:) %>
<%= turbo_frame_tag "like_workout_#{workout.id}" do %>
  <%= button_to like_workout_path(workout), method: :post,
      class: "flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-semibold transition-colors #{liked ? 'bg-orange-500/20 text-orange-400 hover:bg-orange-500/30' : 'bg-gray-800 text-gray-500 hover:text-gray-300'}" do %>
    🔥 <span><%= like_count %></span>
  <% end %>
<% end %>
